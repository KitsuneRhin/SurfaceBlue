[Unit]
Description=Install Surface Linux kernel on first boot
ConditionPathExists=!/var/lib/surface-kernel-installed

[Service]
Type=oneshot
ExecStart=/usr/bin/rpm-ostree install kernel-surface iptsd libwacom-surface libwacom-surface-data
ExecStart=/usr/bin/touch /var/lib/surface-kernel-installed

[Install]
WantedBy=multi-user.target
